<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rl_item_coin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/divider_s"
        android:paddingBottom="@dimen/divider_s"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_crypto_icon"
                    android:layout_width="@dimen/dimen_currency_icon"
                    android:layout_height="@dimen/dimen_currency_icon"
                    android:layout_marginRight="6dp"
                    tools:src="@drawable/ic_star_checked"/>

                <TextView
                    android:id="@+id/tv_symbol_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSizeSmall"
                    tools:text="BTC"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_name_currency"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                tools:text="Tattoocoin (Standart Edition)"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_price_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="9 143,25 €"
                android:textSize="@dimen/textSizeMedium"/>

            <TextView
                android:id="@+id/tv_market_cap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                tools:text="188,768,763,170 €"
                android:textSize="@dimen/textSizeXSmall"/>

            <ImageView
                android:id="@+id/iv_preview_chart"
                android:layout_width="@dimen/chart_icon_width"
                android:paddingTop="@dimen/divider_s"
                android:layout_marginBottom="@dimen/divider_xs"
                android:src="@mipmap/ic_launcher_round"
                android:layout_height="@dimen/chart_icon_height"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_percent_change_1h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:textColor="@color/red"
                    android:textSize="@dimen/textSizeSmall"
                    tools:text="-0,24%"/>

                <TextView
                    android:id="@+id/tv_percent_change_24h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:textColor="@color/red"
                    android:textSize="@dimen/textSizeSmall"
                    tools:text="-0,74%"/>

                <TextView
                    android:id="@+id/tv_percent_change_7d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:textColor="@color/red"
                    android:textSize="@dimen/textSizeSmall"
                    tools:text="-0,84%"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="1ч"
                    android:textSize="@dimen/textSizeSmall"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="24ч"
                    android:textSize="@dimen/textSizeSmall"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="7д"
                    android:textSize="@dimen/textSizeSmall"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/translucent"/>
</RelativeLayout>