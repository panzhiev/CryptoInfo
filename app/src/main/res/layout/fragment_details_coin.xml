<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:animateLayoutChanges="true"
             android:background="@color/white"
             tools:context=".ui.fragment.detailsCoinFragment.DetailsCoinFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/divider_s"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_gravity"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_coin_icon"
                        android:layout_width="@dimen/dimen_currency_icon"
                        android:layout_height="@dimen/dimen_currency_icon"
                        android:layout_margin="@dimen/divider_s"
                        tools:src="@drawable/btc"/>

                    <TextView
                        android:id="@+id/tv_coin_global_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSizeMedium"
                        tools:text="Bitcoin (BTC) | Global Info"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="@color/colorPrimaryDark"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/divider_s">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Price"
                        android:textSize="@dimen/textSizeSmall"/>

                    <TextView
                        android:id="@+id/tv_price_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="sans-serif-light"
                        tools:text="$14 000,5"
                        android:textSize="@dimen/textSizeSmall"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/divider_s">

                    <TextView
                        android:id="@+id/tv_market_cap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Market Cap"
                        android:textSize="@dimen/textSizeSmall"/>

                    <TextView
                        android:id="@+id/tv_market_cap_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="sans-serif-light"
                        tools:text="$139 985 718 7415"
                        android:textSize="@dimen/textSizeSmall"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/divider_s">

                    <TextView
                        android:id="@+id/tv_available_supply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Available Supply"
                        android:textSize="@dimen/textSizeSmall"/>

                    <TextView
                        android:id="@+id/tv_available_supply_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="sans-serif-light"
                        tools:text="$16 858 762"
                        android:textSize="@dimen/textSizeSmall"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/divider_s">

                    <TextView
                        android:id="@+id/tv_max_supply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Max Supply"
                        android:textSize="@dimen/textSizeSmall"/>

                    <TextView
                        android:id="@+id/tv_max_supply_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="sans-serif-light"
                        tools:text="$21 000 000"
                        android:textSize="@dimen/textSizeSmall"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/divider_s">

                    <TextView
                        android:id="@+id/tv_24h_volume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Volume (24 hours)"
                        android:textSize="@dimen/textSizeSmall"/>

                    <TextView
                        android:id="@+id/tv_24h_volume_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="sans-serif-light"
                        tools:text="$6 508 610 000"
                        android:textSize="@dimen/textSizeSmall"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="@color/colorPrimaryDark"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="@color/translucent_white"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/divider_s">

                        <TextView
                            android:id="@+id/tv_percent_change_1h"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="Percent Change (1 hour)"
                            android:textSize="@dimen/textSizeSmall"/>

                        <TextView
                            android:id="@+id/tv_percent_change_1h_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/green"
                            tools:text="+0.45% ꜛ"
                            android:textSize="@dimen/textSizeSmall"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/divider_s"
                        android:layout_marginEnd="@dimen/divider_s">

                        <TextView
                            android:id="@+id/tv_percent_change_24h"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="Percent Change (24 hours)"
                            android:textSize="@dimen/textSizeSmall"/>

                        <TextView
                            android:id="@+id/tv_percent_change_24h_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/green"
                            tools:text="+0.21% ꜛ"
                            android:textSize="@dimen/textSizeSmall"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/divider_s">

                        <TextView
                            android:id="@+id/tv_percent_change_7d"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="Percent Change (7 days)"
                            android:textSize="@dimen/textSizeSmall"/>

                        <TextView
                            android:id="@+id/tv_percent_change_7d_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/green"
                            tools:text="+2.45% ꜛ"
                            android:textSize="@dimen/textSizeSmall"/>
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/loading_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        app:indicatorColor="@color/colorPrimary"
        app:indicatorName="BallPulseSyncIndicator"/>

</FrameLayout>

