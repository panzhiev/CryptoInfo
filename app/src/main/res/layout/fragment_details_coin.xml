<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".ui.fragment.detailsCoinFragment.DetailsCoinFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/divider_s"
                android:focusableInTouchMode="true"
                app:cardCornerRadius="3dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_coin_icon"
                                android:layout_width="@dimen/dimen_currency_icon"
                                android:layout_height="@dimen/dimen_currency_icon"
                                android:layout_marginBottom="@dimen/divider_xs"
                                android:layout_marginEnd="@dimen/divider_s"
                                android:layout_marginStart="@dimen/divider_s"
                                android:layout_marginTop="@dimen/divider_xs"
                                tools:src="@drawable/btc" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/global_info"
                                android:textSize="@dimen/textSizeMedium" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:background="@color/colorPrimary" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/divider_s"
                            android:layout_marginStart="@dimen/divider_s"
                            android:layout_marginTop="@dimen/divider_s">

                            <TextView
                                android:id="@+id/tv_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:text="@string/price"
                                android:textSize="@dimen/textSizeSmall" />

                            <TextView
                                android:id="@+id/tv_price_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="sans-serif-light"
                                android:textSize="@dimen/textSizeSmall"
                                tools:text="$14 000,5" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/divider_s"
                            android:layout_marginStart="@dimen/divider_s"
                            android:layout_marginTop="@dimen/divider_s">

                            <TextView
                                android:id="@+id/tv_market_cap"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:text="@string/market_cap"
                                android:textSize="@dimen/textSizeSmall" />

                            <TextView
                                android:id="@+id/tv_market_cap_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="sans-serif-light"
                                android:textSize="@dimen/textSizeSmall"
                                tools:text="$139 985 718 7415" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/divider_s"
                            android:layout_marginStart="@dimen/divider_s"
                            android:layout_marginTop="@dimen/divider_s">

                            <TextView
                                android:id="@+id/tv_available_supply"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:text="@string/available_supply"
                                android:textSize="@dimen/textSizeSmall" />

                            <TextView
                                android:id="@+id/tv_available_supply_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="sans-serif-light"
                                android:textSize="@dimen/textSizeSmall"
                                tools:text="$16 858 762" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/divider_s"
                            android:layout_marginStart="@dimen/divider_s"
                            android:layout_marginTop="@dimen/divider_s">

                            <TextView
                                android:id="@+id/tv_max_supply"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:text="@string/max_supply"
                                android:textSize="@dimen/textSizeSmall" />

                            <TextView
                                android:id="@+id/tv_max_supply_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="sans-serif-light"
                                android:textSize="@dimen/textSizeSmall"
                                tools:text="$21 000 000" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/divider_s">

                            <TextView
                                android:id="@+id/tv_24h_volume"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:text="@string/volume_24_hours"
                                android:textSize="@dimen/textSizeSmall" />

                            <TextView
                                android:id="@+id/tv_24h_volume_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="sans-serif-light"
                                android:textSize="@dimen/textSizeSmall"
                                tools:text="$6 508 610 000" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:background="@color/colorPrimary" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/divider_s">

                            <TextView
                                android:id="@+id/tv_percent_change_1h"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:text="@string/percent_change_1_hour"
                                android:textSize="@dimen/textSizeSmall" />

                            <TextView
                                android:id="@+id/tv_percent_change_1h_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:textColor="@color/green"
                                android:textSize="@dimen/textSizeSmall"
                                tools:text="+0.45% ꜛ" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/divider_s"
                            android:layout_marginStart="@dimen/divider_s">

                            <TextView
                                android:id="@+id/tv_percent_change_24h"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:text="@string/percent_change_24_hours"
                                android:textSize="@dimen/textSizeSmall" />

                            <TextView
                                android:id="@+id/tv_percent_change_24h_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:textColor="@color/green"
                                android:textSize="@dimen/textSizeSmall"
                                tools:text="+0.21% ꜛ" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/divider_s">

                            <TextView
                                android:id="@+id/tv_percent_change_7d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:text="@string/percent_change_7_days"
                                android:textSize="@dimen/textSizeSmall" />

                            <TextView
                                android:id="@+id/tv_percent_change_7d_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:textColor="@color/green"
                                android:textSize="@dimen/textSizeSmall"
                                tools:text="+2.45% ꜛ" />
                        </RelativeLayout>
                    </LinearLayout>
                </FrameLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_markets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/divider_s"
                android:layout_marginEnd="@dimen/divider_s"
                android:layout_marginStart="@dimen/divider_s"
                app:cardCornerRadius="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gradient_high"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_coin_icon_markets"
                            android:layout_width="@dimen/dimen_currency_icon"
                            android:layout_height="@dimen/dimen_currency_icon"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/divider_xs"
                            android:layout_marginEnd="@dimen/divider_s"
                            android:layout_marginStart="@dimen/divider_s"
                            android:layout_marginTop="@dimen/divider_xs"
                            tools:background="@drawable/btc" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/iv_coin_icon_markets"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/markets"
                                android:textSize="@dimen/textSizeMedium" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:background="@drawable/ic_sync_black_24dp"
                                    android:backgroundTint="@color/colorToolbarItems" />

                                <TextView
                                    android:id="@+id/tv_last_upd_markets"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="2dp"
                                    android:layout_marginTop="-1dp"
                                    android:fontFamily="sans-serif-light"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/textSizeXXSmall"
                                    tools:text="11.12.2017" />
                            </LinearLayout>

                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:animateLayoutChanges="true">

                            <com.wang.avi.AVLoadingIndicatorView
                                android:id="@+id/loading_indicator_markets"
                                android:layout_width="@dimen/dimen_currency_icon"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:visibility="gone"
                                app:indicatorColor="@color/color_progress_bar"
                                app:indicatorName="BallPulseIndicator" />

                            <ImageButton
                                android:id="@+id/ib_refresh"
                                android:layout_width="@dimen/dimen_image_button"
                                android:layout_height="@dimen/dimen_image_button"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:padding="@dimen/dimen_padding_image_button"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_sync_black_24dp"
                                android:tint="@color/color_progress_bar"
                                android:visibility="visible" />
                        </FrameLayout>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:background="@color/colorPrimary" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/divider_s">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="@string/market"
                            android:textSize="@dimen/textSizeSmall" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/margin_price_market"
                            android:fontFamily="sans-serif-light"
                            android:text="@string/price"
                            android:textSize="@dimen/textSizeSmall" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="sans-serif-light"
                            android:text="@string/change"
                            android:textSize="@dimen/textSizeSmall" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_markets"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_no_exchanges"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/divider_s"
                            android:fontFamily="sans-serif-light"
                            android:text="@string/no_available_markets"
                            android:visibility="gone" />

                    </FrameLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</FrameLayout>

