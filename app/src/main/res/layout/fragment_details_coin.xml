<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".ui.fragment.detailsCoinFragment.DetailsCoinFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/divider_s"
                app:cardCornerRadius="8dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_gradient">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_coin_icon"
                                android:layout_width="@dimen/dimen_currency_icon"
                                android:layout_height="@dimen/dimen_currency_icon"
                                android:layout_margin="@dimen/divider_s"
                                tools:src="@drawable/btc" />

                            <TextView
                                android:id="@+id/tv_coin_global_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/textSizeMedium"
                                tools:text="Bitcoin (BTC) | Global Info" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:background="@color/colorPrimaryDark" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/divider_s">

                            <TextView
                                android:id="@+id/tv_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:text="@string/price"
                                android:textSize="@dimen/textSizeSmall" />

                            <TextView
                                android:id="@+id/tv_price_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="sans-serif-light"
                                android:textSize="@dimen/textSizeSmall"
                                tools:text="$14 000,5" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/divider_s">

                            <TextView
                                android:id="@+id/tv_market_cap"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:text="@string/market_cap"
                                android:textSize="@dimen/textSizeSmall" />

                            <TextView
                                android:id="@+id/tv_market_cap_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="sans-serif-light"
                                android:textSize="@dimen/textSizeSmall"
                                tools:text="$139 985 718 7415" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/divider_s">

                            <TextView
                                android:id="@+id/tv_available_supply"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:text="@string/available_supply"
                                android:textSize="@dimen/textSizeSmall" />

                            <TextView
                                android:id="@+id/tv_available_supply_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="sans-serif-light"
                                android:textSize="@dimen/textSizeSmall"
                                tools:text="$16 858 762" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/divider_s">

                            <TextView
                                android:id="@+id/tv_max_supply"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:text="@string/max_supply"
                                android:textSize="@dimen/textSizeSmall" />

                            <TextView
                                android:id="@+id/tv_max_supply_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="sans-serif-light"
                                android:textSize="@dimen/textSizeSmall"
                                tools:text="$21 000 000" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/divider_s">

                            <TextView
                                android:id="@+id/tv_24h_volume"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:text="@string/volume_24_hours"
                                android:textSize="@dimen/textSizeSmall" />

                            <TextView
                                android:id="@+id/tv_24h_volume_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="sans-serif-light"
                                android:textSize="@dimen/textSizeSmall"
                                tools:text="$6 508 610 000" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:background="@color/colorPrimaryDark" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/divider_s">

                            <TextView
                                android:id="@+id/tv_percent_change_1h"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:text="@string/percent_change_1_hour"
                                android:textSize="@dimen/textSizeSmall" />

                            <TextView
                                android:id="@+id/tv_percent_change_1h_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:textColor="@color/green"
                                android:textSize="@dimen/textSizeSmall"
                                tools:text="+0.45% ꜛ" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/divider_s"
                            android:layout_marginStart="@dimen/divider_s">

                            <TextView
                                android:id="@+id/tv_percent_change_24h"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:text="@string/percent_change_24_hours"
                                android:textSize="@dimen/textSizeSmall" />

                            <TextView
                                android:id="@+id/tv_percent_change_24h_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:textColor="@color/green"
                                android:textSize="@dimen/textSizeSmall"
                                tools:text="+0.21% ꜛ" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/divider_s">

                            <TextView
                                android:id="@+id/tv_percent_change_7d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:text="@string/percent_change_7_days"
                                android:textSize="@dimen/textSizeSmall" />

                            <TextView
                                android:id="@+id/tv_percent_change_7d_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:textColor="@color/green"
                                android:textSize="@dimen/textSizeSmall"
                                tools:text="+2.45% ꜛ" />
                        </RelativeLayout>
                    </LinearLayout>
                </FrameLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_markets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/divider_s"
                android:layout_marginEnd="@dimen/divider_s"
                android:layout_marginStart="@dimen/divider_s"
                app:cardCornerRadius="8dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_gradient">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/dimen_currency_icon"
                                android:layout_height="@dimen/dimen_currency_icon"
                                android:layout_margin="@dimen/divider_s"
                                android:background="@drawable/ic_monetization_on_black_24dp"
                                android:backgroundTint="@color/colorPrimaryDark" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/markets"
                                android:textSize="@dimen/textSizeMedium" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:background="@color/colorPrimaryDark" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rv_markets"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <com.wang.avi.AVLoadingIndicatorView
                                android:id="@+id/loading_indicator_markets"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/divider_s"
                                android:visibility="visible"
                                app:indicatorColor="@color/colorPrimaryDark"
                                app:indicatorName="BallClipRotateMultipleIndicator" />
                        </FrameLayout>

                    </LinearLayout>
                </FrameLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</FrameLayout>

