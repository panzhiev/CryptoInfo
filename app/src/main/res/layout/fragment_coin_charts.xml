<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.fragment.coinChartsFragment.CoinChartsFragment">

    <LinearLayout
        android:id="@+id/ll_sort"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_sort_views"
        android:layout_margin="@dimen/divider_s"
        android:background="@drawable/sort_disabled_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="2dp"
        android:visibility="visible"
        android:weightSum="6">

        <TextView
            android:id="@+id/tv_6_hours"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/sort_enabled_bg"
            android:gravity="center"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:text="6ч" />

        <TextView
            android:id="@+id/tv_1_day"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_sort_views"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:text="1д" />

        <TextView
            android:id="@+id/tv_7_days"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_sort_views"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:text="7д" />

        <TextView
            android:id="@+id/tv_1_month"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_sort_views"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:text="1м" />

        <TextView
            android:id="@+id/tv_6_months"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_sort_views"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:text="6м" />

        <TextView
            android:id="@+id/tv_1_year"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_sort_views"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:text="1г" />
    </LinearLayout>

</LinearLayout>

